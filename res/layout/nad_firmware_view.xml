<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nad_bg_gaydient"
    android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
    android:gravity="center|bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15.0dip"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15.0dip"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/main_grid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:alignmentMode="alignBounds"
            android:columnCount="@integer/colFV"
            android:rowCount="@integer/rowFV"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/nad_top_bg"
                android:backgroundTint="@android:color/system_accent1_700">

                <LinearLayout
                    android:id="@+id/l_versi_android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:tint="@android:color/system_accent1_100"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/ic_android_version" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5.0dip"
                        android:text="Android Version"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/android_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5.0dip"
                        android:text="Unknown"
                        android:textColor="@android:color/system_accent1_100"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/nad_top_bg"
                android:backgroundTint="@android:color/system_accent1_700">

                <LinearLayout
                    android:id="@+id/l_nad_version"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:tint="@android:color/system_accent1_100"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/ic_nad_version" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="13.0dip"
                        android:text="Nusantara Version"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/nad_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingTop="5.0dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Unknown"
                        android:textColor="@android:color/system_accent1_100"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/nad_top_bg"
                android:backgroundTint="@android:color/system_accent1_700">

                <LinearLayout
                    android:id="@+id/l_nama_maintener"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:tint="@android:color/system_accent1_100"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/ic_maintainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingTop="13.0dip"
                        android:singleLine="true"
                        android:text="Maintainer Name"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/maintainer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingTop="5.0dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/maintainer_name"
                        android:textColor="@android:color/system_accent1_100"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/nad_top_bg"
                android:backgroundTint="@android:color/system_accent1_700">

                <LinearLayout
                    android:id="@+id/l_build_number"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:tint="@android:color/system_accent1_100"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/ic_build_number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="13.0dip"
                        android:text="Build Number"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/build_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingTop="5.0dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Unknown"
                        android:textColor="@android:color/system_accent1_100"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20.0dp"
        android:layout_marginBottom="-22dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/nad_round_top"
        android:backgroundTint="?android:attr/colorPrimary"
        android:gravity="bottom"
        android:rotation="180.0" />

</LinearLayout>
